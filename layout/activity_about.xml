<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d"
    tools:context=".About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="146dp"
            android:layout_height="134dp"
            android:src="@drawable/mda3"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="ABOUT US"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:text="We are the developers of MDA (Monogenic Disease Awareness app). We provide an educational platform for our users to learn about common monogenic diseases prevalent in Pakistan, both on a general and an in-depth Bioinformatics level and in the process also understand to link and apply BI to real life problems."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="What is our Aim?"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:text="Our Aim is to use Bioinformatics resources to spread awareness among the masses about dangerous Monogenous diseases that claim thousands of lives yearly or at the very least severely reduce quality of life. After going through our app the user will able to not only understand when to seek professional help on the matter and what measures need to be taken but also where these diseases stem from and how they propagate within an individual on the most basic level. This will make risk assessment easier for the user based on observations such as family history. "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="How Does This App Work"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:text="We have attempted to make this app as simple to use and understand as possible. The user only needs to create an account to access the services and no additional data is required to be entered to gain information, learn and use the bioinformatics tools provided"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>