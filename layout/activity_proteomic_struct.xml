<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".ProteomicStruct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/normstructtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Reference Structure"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rand"
            android:layout_width="344dp"
            android:layout_height="344dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/norminteracttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Structure Interactions"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rand1"
            android:layout_width="344dp"
            android:layout_height="344dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/normal_cn3d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="View in Cn3D" />

        <TextView
            android:id="@+id/mutantstructtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Mutated Structure"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mutated_image"
            android:layout_width="344dp"
            android:layout_height="344dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/mutantinteracttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Structure Interactions"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/mutated_image2"
            android:layout_width="344dp"
            android:layout_height="344dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/mutated_cn3d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="View in Cn3D" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPARISON"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/comp"
            android:layout_width="344dp"
            android:layout_height="344dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect site"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtdisconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disconnect site"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/connect"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/disconnect"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>