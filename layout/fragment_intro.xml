<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/f1Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".IntroFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IntroHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:text="INTRODUCTION TO SCD:"
                android:textColor="#3F51B5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/infotxt1"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:padding="10dp"
                        android:paddingEnd="5dp"
                        android:text="TextView"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/infotxt2"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingStart="5dp"
                        android:text="TextView"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/infoimg1"
                    android:layout_width="35dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/infoimg2"
                    android:layout_width="35dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_launcher_foreground" />
            </LinearLayout>

            <TextView
                android:id="@+id/info2"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/infome"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/infotxt4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/PrevalenceBar"
                android:layout_width="280dp"
                android:layout_height="350dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:visibility="invisible">

            </com.github.mikephil.charting.charts.BarChart>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pakistan"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Punjab"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sindh"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/PrevalencePie"
                android:layout_width="280dp"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:visibility="invisible" >

            </com.github.mikephil.charting.charts.PieChart>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Hemophilia A"
                    android:textColor="@color/brown"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Hemophilia B"
                    android:textColor="@color/yellow"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sub3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Hemophilia A with inhibitors"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sub4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Hemophilia B with Inhibitors"
                    android:textColor="@color/magenta"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sub5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Others"
                    android:textColor="@color/Dmoss"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/infotxt5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:padding="10dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/Download1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/neon"
                android:text="Download"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Browse1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/neon"
                android:gravity="center"
                android:text="Browse Online"
                android:textStyle="bold" />

        </LinearLayout>



</ScrollView>