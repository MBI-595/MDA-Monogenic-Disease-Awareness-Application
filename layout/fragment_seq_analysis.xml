<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SeqAnalysisFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo3"
            android:layout_width="162dp"
            android:layout_height="150dp"
            android:padding="20dp"
            android:src="@drawable/mda3"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/n_mol"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:includeFontPadding="true"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/m_mol"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/pair_align"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="Pairwise Alignment"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiple_align"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="Multiple Sequence Alignment"
            android:textStyle="bold" />

        <Button
            android:id="@+id/clustal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="Clustal Omega"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>