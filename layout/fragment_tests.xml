<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".TestsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/TestHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:padding="10dp"
            android:text="TESTS FOR SCD:"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/testsview"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/testsview2"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/testsview3"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:includeFontPadding="true"
                android:padding="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/Download3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="Download"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Browse3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/neon"
            android:text="Browse Online"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tests_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/testpic1"
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:src="@drawable/general_tests" />

                    <TextView
                        android:id="@+id/testtxt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:text="- Sweat test.                "
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/testpic2"
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:src="@drawable/general_tests" />

                    <TextView
                        android:id="@+id/testtxt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="- Genetic test.         "
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/testpic3"
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:src="@drawable/general_tests" />

                    <TextView
                        android:id="@+id/testtxt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:text="- Sweat test.                "
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/testpic4"
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:src="@drawable/general_tests" />

                    <TextView
                        android:id="@+id/testtxt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:text="- Genetic test.         "
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/testpic5"
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:src="@drawable/general_tests" />

                    <TextView
                        android:id="@+id/testtxt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:text="- Blood test.       "
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/testpic6"
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:src="@drawable/general_tests" />

                    <TextView
                        android:id="@+id/testtxt6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:text="- Plasma Tests."
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>